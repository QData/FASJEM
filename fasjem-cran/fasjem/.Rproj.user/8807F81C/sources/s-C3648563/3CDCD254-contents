subgraph = subgraph.edges(examplegraph, which(E(examplegraph)$color==c(1,3)), delete.vertices = FALSE)

plot.igraph(subgraph, layout = examplelayout)


### this is what I want for zooming into a node
subgraph = subgraph.edges(examplegraph, unlist(incident_edges(examplegraph, c(3,4,15))) , delete.vertices = FALSE)

plot.igraph(subgraph, layout = examplelayout)

### using induced_subgraph
plot.igraph(induced_subgraph(examplegraph, incident_edges(examplegraph, 3)[[1]], impl = "auto"), layout = examplelayout)

plot.igraph(make_ego_graph(graph = examplegraph, order = 1, nodes = V(examplegraph))[[3]], layout = examplelayout)

